<form
    class="{{cssClass}} flexcol"
    autocomplete="off">

    {{!-- Sheet Header --}}
    <header class="sheet-header">
        <img
            class="profile-img"
            src="{{actor.img}}"
            data-edit="img"
            title="{{actor.name}}"
            height="120"
            width="120"
        />
        <div class="header-fields">
            <h1 class="charname">
                <input
                    name="name"
                    type="text"
                    value="{{actor.name}}"
                    placeholder="Name"
                    data-dtype="String"
                />
            </h1>
            <h2 class="failed-career">
                <input
                    name="system.failedCareer"
                    type="text"
                    value="{{systemData.failedCareer}}"
                    placeholder="Failed Career"
                    data-dtype="String"/>
            </h2>
            <div class="">
                {{!-- "flex-group-center" is also defined in the _grid.scss file
                and it will add a small amount of padding, a border, and will
                center all of its child elements content and text. --}}
                <div class="grid grid-2col">
                    <div class="resource flexrow flex-group-center">
                        <div class="flexcol">
                            <label
                                for="systemData.hp.value"
                                class="resource-label">HP
                                {{#if systemData.tooBulky}}<span class="too-bulky" title="Too BULKY!">!</span>{{/if}}
                            </label>
                            <div class="resource-content flexrow flex-center flex-between">
                                <input
                                    type="number"
                                    name="system.hp.value"
                                    value="{{systemData.hp.value}}"
                                    data-dtype="Number"
                                />
                                <span> / </span>
                                <input
                                    type="number"
                                    name="system.hp.max"
                                    value="{{systemData.hp.max}}"
                                    data-dtype="Number"/>

                            </div>
                        </div>
                    </div>
                    <div class="resource flexrow flex-group-center">
                        <div class="flexcol">
                            <label class="resource-label">Deprived</label>
                            <input
                                class="checkbox-block"
                                type="checkbox"
                                {{checked systemData.deprived}}
                                name="system.deprived"
                                value="{{systemData.deprived}}"
                                data-dtype="Boolean"/>
                        </div>
                    </div>
                </div>
                <div class="grid grid-2col">

                    <div class="resource flexrow flex-group-center">
                        <div class="flexcol">
                            <label
                                for="data.pounds"
                                class="resource-label">&#163;</label>
                            <div class="resource-content flexrow flex-center flex-between">
                                <input
                                    type="number"
                                    name="system.pounds"
                                    value="{{systemData.pounds}}"
                                    data-dtype="Number"
                                />
                            </div>
                        </div>
                    </div>
                    <div class="resource flexrow flex-group-center">
                        <div class="flexcol">
                            <label
                                for="data.armour"
                                class="resource-label">Armour</label>
                            <div class="resource-content flexrow flex-center flex-between">
								<span>
									{{systemData.armour}}
								</span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </header>
    <div class="">
        <div class="grid grid-3col">
            {{#each systemData.abilities as |ability key|}}
            <div class="ability flexrow flex-group-center">
                <div class="flexcol">
                    <label
                        for="systemData.abilities.{{key}}.value"
                        class="resource-label rollable"
                        data-action="rollAbility"
                        data-ability="{{key}}">
                        <i class="fas fa-dice-d20"></i> {{key}}
                    </label>
                    <div class="flexrow">
                        <input
                            type="number"
                            name="system.abilities.{{key}}.value"
                            value="{{ability.value}}"
                            data-dtype="Number"
                        /> <span> / </span>
                        <input
                            type="number"
                            name="system.abilities.{{key}}.max"
                            value="{{ability.max}}"
                            data-dtype="Number"
                        />
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="grid grid-3col">
        <span>
			<button
                type="button"
                title="Rest"
                {{#if systemData.deprived}}
                disabled="true"
                {{/if}}
                data-action="rest">Rest
			</button>
		</span>
        <span>
			<button
                type="button"
                title="Restore Abilities"
                data-action="restore">Restore Abilities
			</button>
		</span>
        <span>
			<button
                type="button"
                title="Luck"
                data-action="rollLuck">Luck
			</button>
		</span>
    </div>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item" data-group="primary" data-tab="description">Description</a>
        <a class="item" data-group="primary" data-tab="items">Items</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- Biography Tab --}}
        <div
            class="tab biography"
            data-group="primary"
            data-tab="description">
            {{editor enrichedBiography target="system.biography" editable=editable engine="prosemirror"}}
        </div>

        {{!-- Owned Items Tab --}}
        <div
            class="tab items"
            data-group="primary"
            data-tab="items">
            <ol class="items-list">
                <li class="item flexrow item-header">
                    <div class="item-name">Name <i>(bold means equipped)</i></div>
                    <div class="item-controls">
                        <a
                            class="item-control"
                            title="Create item"
                            data-action="createItem"
                            data-type="item">
                            <i class="fas fa-plus"></i>
                            Add item
                        </a>
                    </div>
                </li>
                {{#each items as |item id|}}
                <li
                    class="item flexrow"
                    data-item-id="{{item.id}}">
					<span>
						<span class="item-name item-edit">
							{{item.system.quantity}}
							{{#boldIf item.system.equipped}}
							{{item.name}}
							{{/boldIf}}
						</span>
						{{#if item.system.bulky}}
						<span class="item-info">BULKY</span>
						{{/if}}
						{{#if item.system.blast}}
						<span class="item-info">BLAST</span>
						{{/if}}
						{{#if item.system.armour}}
						<span class="item-info">Armour {{item.system.armour}}</span>
						{{/if}}
						{{#if item.system.damageFormula}}
						<span class="item-info">{{item.system.damageFormula}} damage</span>
						{{/if}}
					</span>
                    <div class="item-controls">
                        {{#if item.system.equipped}}
                        {{#if item.system.damageFormula}}
                        <span
                            class="item-button rollable"
                            data-action="rollItem"
                            data-label="damage with {{item.name}}"
                            data-roll="{{item.system.damageFormula}}"
                            title="Roll Damage">
							<i class="fas fa-dice-d20"></i>
						</span>
                        {{/if}}
                        {{/if}}
                        <a
                            class="item-control"
                            data-action="editItem"
                            title="Edit Item"><i class="fas fa-edit"></i></a>
                        <a
                            class="item-control"
                            data-action="deleteItem"
                            title="Delete One Item"><i class="fas fa-trash"></i></a>
                    </div>
                </li>
                {{/each}}
            </ol>
        </div>
    </section>
</form>





